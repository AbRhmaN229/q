{
  "name": "@hyperb1iss/q",
  "version": "0.1.0",
  "description": "The shell's quiet companion - elegant CLI agent for quick queries",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "q": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "build:compile": "bun build src/cli.ts --compile --outfile q",
    "check": "biome check --write .",
    "lint": "biome lint --write .",
    "format": "biome format --write . && prettier --write \"**/*.{yaml,yml,md}\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist q",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperb1iss/q.git"
  },
  "author": "Stefanie Jane <stef@hyperbliss.tech>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hyperb1iss/q/issues"
  },
  "homepage": "https://github.com/hyperb1iss/q#readme",
  "keywords": [
    "cli",
    "terminal",
    "claude",
    "ai",
    "agent",
    "tui",
    "shell"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^0.2.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1",
    "marked": "^15.0.4",
    "shiki": "^1.24.2",
    "cosmiconfig": "^9.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "@types/react": "^18.3.12",
    "@types/yargs": "^17.0.33",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitepress": "^1.5.0"
  }
}
